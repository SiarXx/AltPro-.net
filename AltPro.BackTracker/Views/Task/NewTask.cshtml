@using AltPro.BackTracker.ViewModels;
@model AltPro.BackTracker.ViewModels.TaskViewModel

@{
    ViewData["Title"] = "NewTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>NewTask</h1>

<h4>TaskViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskID" class="control-label"></label>
                <input asp-for="TaskID" class="form-control" value="Sample" readonly="readonly"/>
                <span asp-validation-for="TaskID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModuleName" class="control-label"></label>
                <input asp-for="ModuleName" class="form-control" />
                <span asp-validation-for="ModuleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReporterID" class="control-label"></label>
                <input asp-for="ReporterID" class="form-control" readonly/>
                <span asp-validation-for="ReporterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskPriority" class="control-label"></label>
                @Html.DropDownList("Priority",new SelectList(Enum.GetValues(typeof(ETaskPriority))),"Select",new { @class = "form-control"})
            </div>
            <div class="form-group">
                <label asp-for="TaskStatus" class="control-label"></label>
                <input asp-for="TaskStatus" class="form-control" />
                <span asp-validation-for="TaskStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

