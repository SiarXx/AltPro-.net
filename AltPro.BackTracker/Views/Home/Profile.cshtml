@model ProfileDetailsViewModel

@{
    ViewBag.Title = "User Profile";
    var photoPath = "~/images/" + (Model.User.PhotoPath ?? "donut_render2.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">

            <div class="card-header">
                <h1>@Model.User.Email</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>User ID : @Model.User.Id</h4>
                <h4>Email : @Model.User.Email</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
                <!--
    <a class="btn btn-primary"
       asp-action="edit" asp-controller="home"
       asp-route-id="@Model.User.Id">Edit</a>
    <a href="#" class="btn btn-danger">Delete</a>
    -->
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            })
        });
    </script>
}